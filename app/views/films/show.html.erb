<div class="row">

  <div class="col-md-4">
    <%= image_tag @film.film_img.url(:film_show), class: "film-show"%>
  </div>

  <div class="col-md-8">

    <h1><%= @film.name %></h1>
    <h3><%= @film.year %></h3>
    <h2>Average rating</h2>
    <div class="average-review-rating" data-score=<%= @average_review %>></div>
    <span>Based on <%= @film.reviews.count %> reviews</span>
    <h2><%= @film.director %></h2>
    <p><%= @film.desc %><p>
    <h3><%= @film.cast %></h3>
    <% @user = User.find(@film.user_id) %>
    <p>Added by <%= @user.username %></p>



  </div>

</div>

<div class="row">

  <div class="col-md-4">
      <!--  %> -->
      <%= render @film.reviews.order("created_at DESC") %>
      <%= link_to "Add review", new_film_review_path(@film) %>

  </div>

</div>


<% if user_signed_in? %>

  <% if @film.user_id == current_user.id || current_user.admin? %>
      <ul>
        <li><%= link_to "Edit Film", edit_film_path(@film) %></li>
        <li><%= link_to "Delete Film", film_path(@film), method: :delete, data: { confirm: "Are you sure you want to delete"} %></li>
      </ul>

  <% end %>

  <% if current_user.editor %>
    <ul>
      <li><%= link_to "Edit Film", edit_film_path(@film) %></li>
    </ul>

  <% end %>

<% end %>

<script>
    $('.review-rating').raty({
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets'
  });
</script>

<script>
    $('.average-review-rating').raty({
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets'
  });
</script>
