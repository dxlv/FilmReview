<!-- Show validation error messages-->
<% if @review.errors.any? %>
  <h2>Errors</h2>
  <ul>

    <% @review.errors.full_messages.each do |message| %>
        <li>
            <%= message %>
        </li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for([@film, @film.reviews.build]) do |f| %>
  <div id="rating-form">
      <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, class: "btn btn-custom" %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });
</script>
